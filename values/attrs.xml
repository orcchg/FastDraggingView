<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr name="vertical_padding" format="dimension" />
    <attr name="horizontal_padding" format="dimension" />
    <attr name="box_height" format="dimension" />
    <attr name="box_width" format="dimension" />
    <attr name="max" format="dimension" />
	
	<declare-styleable name="DraggingView">
	    <attr name="vertical_padding" />
	    <attr name="horizontal_padding" />
	    <attr name="direction" format="integer">
	        <enum name="right" format = "integer" value="0" />
	        <enum name="left" format = "integer" value="1" />
	    </attr>
	</declare-styleable>
</resources>
